{
  "name": "noatboat",
  "version": "1.0.3",
  "description": "Noat Boat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "npx @electron/rebuild",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-mac-intel": "electron-builder --mac --x64",
    "build-mac-arm": "electron-builder --mac --arm64",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.noatboat.app",
    "productName": "Noat Boat",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "asarUnpack": [
      "**/node-llama-cpp/**",
      "**/ffmpeg-static/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  },
  "keywords": [
    "notes",
    "markdown"
  ],
  "author": "Some Other Guy",
  "license": "MIT",
  "dependencies": {
    "@netlify/blobs": "^10.5.0",
    "ffmpeg-static": "^5.2.0",
    "node-llama-cpp": "^3.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  }
}
